<h1>New Message</h1>

<%= form_for :message, url: messages_path do |f| %>
  <p>
    <%= f.label :number_to_send_to %><br>
    <%= f.text_field :number_to_send_to %>
  </p>
 
  <p>
    <%= f.label :message_to_send %><br>
    <%= f.text_area :message_to_send %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>